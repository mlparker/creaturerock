<h1>Blog</h1>
<ul class="blog-list">
  {% for post in collections.blog | reverse %}
    <li class="blog-listing">
      {% if post.data.image %}
        <img src="{{ site.baseurl }}{{ post.data.image }}" alt="{{ post.data.title }}" class="featured-image" />
      {% endif %}
      <h2><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
      <p class="post-date">{{ post.date | date }}</p>
    </li>
  {% endfor %}
</ul>

